  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Planner API",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/src/main.js",
      "outFiles": ["${workspaceRoot}/lib/**/*.js"],
      "preLaunchTask": "npm: build",
      "internalConsoleOptions": "openOnSessionStart",
      "showAsyncStacks": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch current file",
      "program": "${file}",
      "outFiles": ["${workspaceRoot}/lib/**/*.js"],
      "preLaunchTask": "npm: build",
      "internalConsoleOptions": "openOnSessionStart",
      "showAsyncStacks": true
    }
  ]
}
